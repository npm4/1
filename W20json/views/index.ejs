<!DOCTYPE html>
<html>
<head><title>Employee Records</title></head>
<body>
  <h1>All Employees</h1>
  <a href="/add">Add New Employee</a>
  <table border="1">
    <tr>
      <th>Name</th><th>Department</th><th>Designation</th><th>Salary</th><th>Joining Date</th><th>Action</th>
    </tr>
    <% employees.forEach(e => { %>
      <tr>
        <td><%= e.name %></td>
        <td><%= e.department %></td>
        <td><%= e.designation %></td>
        <td><%= e.salary %></td>
        <td><%= e.joiningDate %></td>
        <td>
          <a href="/edit/<%= e.id %>">Edit</a> |
          <a href="/delete/<%= e.id %>">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
