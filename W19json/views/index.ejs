<!DOCTYPE html>
<html>
<head>
  <title>Student Marks</title>
</head>
<body>
  <h1>Student Records (Total: <%= count %>)</h1>
  <a href="/add">Add Student</a> | 
  <a href="/dsbda">DSBDA > 20</a> |
  <a href="/top">All > 25</a> |
  <a href="/low">Maths & Science < 40</a>
  <table border="1">
    <tr>
      <th>Name</th><th>Roll</th><th>WAD</th><th>DSBDA</th><th>CNS</th><th>CC</th><th>AI</th><th>Action</th>
    </tr>
    <% students.forEach(s => { %>
      <tr>
        <td><%= s.Name %></td>
        <td><%= s.Roll_No %></td>
        <td><%= s.WAD_Marks %></td>
        <td><%= s.DSBDA_Marks %></td>
        <td><%= s.CNS_Marks %></td>
        <td><%= s.CC_Marks %></td>
        <td><%= s.AI_Marks %></td>
        <td>
          <a href="/update/<%= s.Roll_No %>">+10 Marks</a> |
          <a href="/delete/<%= s.Roll_No %>">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
